@model List<Model.EF.SanPham>
@{
    ViewBag.Title = "ALLSP";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách sản phẩm
}
<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <hr />
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataSanPham">
                        <thead>
                            <tr>
                                <th>Mã sản Phẩn</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Mã sản Phẩn</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Mã sản Phẩn</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Mã sản Phẩn</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Mã sản Phẩn</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Mã sản Phẩn</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Mã sản Phẩn</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Mã sản Phẩn</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Mã sản Phẩn</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Mã sản Phẩn</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Mã sản Phẩn</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Mã sản Phẩn</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Mã sản Phẩn</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Mã sản Phẩn</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Mã sản Phẩn</th>
                                <th>Tên Sản Phẩm</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                            <tr id="row_@item.MaSP">
                                <td>
                                    <a href="/Admin/New/Details/@item.MaSP">@item.MaSP</a>
                                </td>
                                <td>@item.TenSP</td>
                                <td>@item.Mota</td>
                                <td>@item.GiaBan</td>
                                <td><img src="@item.AnhTDe" /></td>
                                <td>@item.LoaiSanPham.TenLSP</td>
                                <td>@item.Date</td>
                                @if (item.IDHang != null)
                                {
                                    <td>@item.Hang.TenHang</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.IDhinh != null)
                                {
                                    <td>@item.IDhinh</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_BXL != null)
                                {
                                    <td>@item.BoXL.Ten_BXL</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_HDH != null)
                                {
                                    <td>@item.HeDieuHanh.Ten_HDH</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_R != null)
                                {
                                    <td>@item.Ram.Ten_R</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_BN != null)
                                {
                                    <td>@item.BoNho.DungLuong</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_Pin != null)
                                {
                                    <td>@item.Pin.Dungluong</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_Camera != null)
                                {
                                    <td>@item.Camera.Ten_Camera</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_Card != null)
                                {
                                    <td>@item.Card.Ten</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_PB != null)
                                {
                                    <td>@item.PhienBan.Ten_PB</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_DPG != null)
                                {
                                    <td>@item.DoPhangia.Ten</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_Case != null)
                                {
                                    <td>@item.Case.Ten_Case</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_KT != null)
                                {
                                    <td>@item.KichThuoc.Ten</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_KD != null)
                                {
                                    <td>@item.KieuDang.Ten_KD</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_CN != null)
                                {
                                    <td>@item.ChoNgoi.So</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_QD != null)
                                {
                                    <td>@item.Quangduong.So</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_Doi != null)
                                {
                                    <td>@item.DoiSX.Nam</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_CL != null)
                                {
                                    <td>@item.ChatLieu.Ten</td>
                                }
                                else
                                {
                                    <td></td>
                                }@if (item.ID_M != null)
                                {
                                    <td>@item.Mua.Ten_M</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_MS != null)
                                {
                                    <td>@item.MauSac.Ten_MS</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_HS != null)
                                {
                                    <td>@item.HopSo.Ten_HS</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_LTR != null)
                                {
                                    <td>@item.LoaiTR.Ten</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.ID_PK != null)
                                {
                                    <td>@item.PhuKien.Ten</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                <td>
                                    @Ajax.ActionLink("Xoá", "Delete", new { @id = item.MaSP }, new AjaxOptions
                               {
                                   Confirm = "Bạn có muốn xoá bản ghi này?",
                                   OnComplete = "$('#row_" + @item.MaSP + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </td>
                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

