@model List<Model.EF.SanPham>
@{
    ViewBag.Title = "ALLSP";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách sản phẩm
}
<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <hr />
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataSanPham">
                        <thead>
                            <tr>
                                <th>Mã sản Phẩm</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Giá</th>
                                <th>Ảnh</th>
                                <th>Tên loại sản phẩm</th>
                                <th>Ngày tháng năm</th>                                                                
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                            <tr id="row_@item.MaSP">
                                <td>
                                    <a href="/Admin/New/Details/@item.MaSP">@item.MaSP</a>
                                </td>
                                <td>@item.TenSP</td>
                                <td>@item.GiaBan</td>
                                <td><img src="@item.AnhTDe" /></td>
                                <td>@item.LoaiSanPham.TenLSP</td>
                                <td>@item.Date</td>                                
                                <td>
                                    @Ajax.ActionLink("Xoá", "Delete", new { @id = item.MaSP }, new AjaxOptions
                               {
                                   Confirm = "Bạn có muốn xoá bản ghi này?",
                                   OnComplete = "$('#row_" + @item.MaSP + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </td>
                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

