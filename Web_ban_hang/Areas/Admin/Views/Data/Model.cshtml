@model Model.EF.Model

@{
    ViewBag.Title = "Model";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var models = (List<Model.EF.Model>)ViewBag.modeles;
}

@section header{
    Thêm người dùng
}

@using (Html.BeginForm("Model", "Data", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Model</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Ten_Model, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ten_Model, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ten_Model, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDHang, "IDHang", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDHang", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDHang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

    <div class="row">

        <div class="col-lg-12">

            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <hr />

                <div class="panel-body">
                    <div class="col-md-5"> <h4>Danh sách dung lượng Ram</h4></div>
                    <div class="table-responsive col-5">
                        <table class="table table-striped table-bordered table-hover" id="datamodel">
                            <thead>
                                <tr>

                                    <th>STT</th>
                                    <th>Dung lượng</th>
                                    <th>Loai sản phẩn</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in models)
                                {
                                <tr id="row_@item.ID_Mdel">
                                    <td>@item.ID_Mdel</td>
                                    <td>@item.Ten_Model</td>
                                    <td>@item.Hang.TenHang</td>
                                    <td>@item.Hang.LoaiSanPham.TenLSP</td>
                                    <td>
                                        <a href="/Admin/User/Edit/@item.ID_Mdel">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ID_Mdel }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xoá bản ghi này?",
                                       OnComplete = "$('#row_" + @item.ID_Mdel + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                                }


                            </tbody>
                        </table>

                    </div>
                    <!-- /.table-responsive -->
                </div>

                <!-- /.panel-body -->
            </div>

        </div>
    </div>
