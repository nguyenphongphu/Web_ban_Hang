@model Model.EF.LoaiSanPham

@{
    ViewBag.Title = "LoaiSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var LSP = (List<Model.EF.LoaiSanPham>)ViewBag.LSP;
}

<h2>LoaiSanPham</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>LoaiSanPham</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TenLSP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLSP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Link, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LSPParentID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LSPParentID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LSPParentID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Status)
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <hr />

            <div class="panel-body">
                <div class="col-md-5"> <h4>Danh sách dung lượng Ram</h4></div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataLSP">
                        <thead>
                            <tr>

                                <th>STT</th>
                                <th>Tên Loại Sản Phẩn</th>
                                <th>Parent Loại Sản Phẩm</th>
                                <th>Trạng thái</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in LSP)
                            {
                            <tr id="row_@item.MaLSP">
                                <td>@item.MaLSP</td>
                                <td>@item.TenLSP</td>
                                <td>@item.LSPParentID</td>
                                <td><a href="#" class="btn-active" data-id="@item.MaLSP">@Html.Raw(item.Status ? "<strong>Kích hoạt</strong>" : "Khoá")</a></td>
                                <td>
                                    <a href="/Admin/User/Edit/@item.MaLSP">Sửa</a>
                                    |
                                    @Ajax.ActionLink("Xoá", "Delete", new { @id = item.MaLSP }, new AjaxOptions
                               {
                                   Confirm = "Bạn có muốn xoá bản ghi này?",
                                   OnComplete = "$('#row_" + @item.MaLSP + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </td>
                            </tr>
                            }


                        </tbody>
                    </table>

                </div>
                <!-- /.table-responsive -->
            </div>

            <!-- /.panel-body -->
        </div>

    </div>
</div>

