@model List<Model.EF.HinhAnh>

@{
    ViewBag.Title = "BoNho";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
   
}

@section header{
    Thêm thông tin dung lượng bộ nhớ các loại sản phẩn
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <hr />
            <div class="panel-body">
                <div class="col-md-5"> <h4>Danh sách</h4></div>
                <div class="table-responsive ">
                    <table class="table table-striped table-bordered table-hover" id="dataram">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Hinh Ảnh</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Anh FULL</th>
                                <th>Anh Thumbnail</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr id="row_@item.IDhinh">
                                <td>@item.IDhinh</td>
                                <td><img src="@item.Link" style="height:100px;width:100px"/></td>
                                <td><a href="/Admin/New/Details/@item.MASP">@item.SanPham.TenSP</a></td>
                                <td>@item.AnhFull</td>
                                <td>@item.AnhThumbnail</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
