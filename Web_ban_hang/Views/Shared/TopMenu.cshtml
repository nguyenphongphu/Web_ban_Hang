@model List<Model.EF.Menu>
<div class="call">
    <p><span>Need help?</span> call us <span class="number">1-22-3456789</span></p>
</div>
<div class="account_desc" id="userDN">
    @{
        var session = (UserLogin)Session[Web_ban_hang.Common.CommonConstants.USER_SESSION];
    }
    @if (session == null)
    {
        <ul id="0">
            @foreach (var item in Model)
            {
                <li><a href="@item.Link">@item.Text</a></li>
            }

        </ul>
    }
    else
    {
        <ul id="1">
            <li><a href="@Model[0].Link">@Model[0].Text</a></li>
            <li class="dropdown  " role="presentation">
                <a class=" dropdown-toggle" data-toggle=dropdown href="javascript:">
                    <i class="fa fa-user">Xin chào:@session.UserName</i>
                </a>
                <ul class="dropdown-menu nav">
                    @*<li> @Html.ActionLink("Thông tin người dùng", "Index", "User")</li>*@
                    <li>@Html.ActionLink("Thoát", "Logout", "User")</li>
                </ul>
            </li>


        </ul>
    }

</div>
<div class="clear"></div>
