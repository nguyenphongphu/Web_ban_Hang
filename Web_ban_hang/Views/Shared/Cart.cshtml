@model List<Web_ban_hang.Models.CartItem>
@{
    var session = (UserLogin)Session[Web_ban_hang.Common.CommonConstants.USER_SESSION];
    if (session != null)
    {
        if (Model.Count > 0)
        {
            <a href="/gio-hang" id="cart">
                <img src="/Assets/client/images/cart-icon.png" class="cart-icon" />
                <span class="cart-num" >@Model.Count</span>
            </a>
        }
        else
        {
            <a href="/gio-hang" id="cart">
                <img src="/Assets/client/images/cart-icon.png" class="cart-icon" />               
            </a>
        }

    }
    else
    {
        <a href="/dang-nhap" id="cart">
            <img src="/Assets/client/images/cart-icon.png" class="cart-icon" />            
        </a>
    }
}

