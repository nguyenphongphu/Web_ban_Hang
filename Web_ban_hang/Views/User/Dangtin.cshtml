    $("#id-ten-t>li>a").on('click', function () {
        var val = $(this).html();
        $("#tinh").html(val);
    })
    $("#btnBackPost").on('click', function () {
        $(".review-news-box").css("display", "none");
        $("#dangtin").removeAttr('style');
    })
    $("#btnReview").on('click', function () {
        $("#dangtin").css("display", "none");
        $(".review-news-box").removeAttr('style');
    })
</script>

