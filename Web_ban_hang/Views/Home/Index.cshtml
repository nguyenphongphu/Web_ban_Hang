@{

    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var slides = (List<Model.EF.Slide>)ViewBag.Silde;
    var TinNew = (List<Model.EF.DangBT>)ViewBag.SPnew;
    var HotSP = (List<Model.EF.DangBT>)ViewBag.Hot;

}

<script>
    $(function () {
        $('#myCarousel').carousel({
            interval: 2000,
            pause: "false"
        });

        $('#playButton').click(function () {
            $('#myCarousel').carousel('cycle');
        });
        $('#pauseButton').click(function () {
            $('#myCarousel').carousel('pause');
        });
    });
</script>
@section slide{
    <div class="header_bottom_left">
        <div class="categories">
            @{ Html.RenderAction("MenuSanPham", "Home");}
        </div>
    </div>
    <div class="header_bottom_right">
        <div class="slider">
            <div id="myCarousel" class="carousel slide ">
                <div class="carousel-inner ">
                    @foreach (var item in slides)
                    {
                        var url = "/chi-tiet/" + item.SanPham.TieuDe + "-" + item.MaSP;
                        if (item.STTStatus == 1)
                        {
                            <div class="item active">
                                <div class="slider-img">
                                    <a href="@url"><img src="@item.LinkAnh" alt="learn more" /></a>
                                </div>
                                <div class="slider-text">
                                    <h1>Clearance<br><span>SALE</span></h1>
                                    <h2>UPTo @item.GiamGia OFF</h2>
                                    <div class="features_list">
                                        <h4>Get to Know More About Our Memorable Services Lorem Ipsum is simply dummy text</h4>
                                    </div>
                                    <a href="@url" class="button">Shop Now</a>
                                </div>
                                <div class="clear"></div>
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <div class="slider-text">
                                    <h1>Clearance<br><span>SALE</span></h1>
                                    <h2>UPTo @item.GiamGia OFF</h2>
                                    <div class="features_list">
                                        <h4>Get to Know More About Our Memorable Services Lorem Ipsum is simply dummy text</h4>
                                    </div>
                                    <a href="@url" class="button">Shop Now</a>
                                </div>
                                <div class="slider-img">
                                    <a href="@url"><img src="@item.LinkAnh" alt="learn more" /></a>
                                </div>
                                <div class="clear"></div>
                            </div>
                        }
                    }

                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>
}
<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>sản phẩm mới</h3>
        </div>
        <div class="see" align="center">
            <p><a href="/san-pham/new">Tất cả sản phẩm </a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @{            
            foreach (var item in TinNew)
            {
                var url = "/chi-tiet/" + item.SanPham.TieuDe + "-" + item.MaSP;

                <div class="grid_1_of_4 images_1_of_4">
                    <a href="@url" class="item-sp" style="text-decoration:none">
                        <img src="@item.SanPham.AnhTDe" alt="@item.SanPham.TenSP" />
                        <h2>@item.SanPham.TenSP</h2>
                        <div class="price-details">
                            <div class="price-number">
                                <span class="rupees">@(item.SanPham.GiaBan > 0 ? item.SanPham.GiaBan.Value.ToString("N0") : "Liên hệ")</span>
                            </div>
                            <div class="add-cart">
                                <span>@item.Khuvuc.TenKV</span>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </a>
                </div>

            }
        }

    </div>
    <div class="content_bottom">
        <div class="heading">
            <h3>Sản phẩm Hot</h3>
        </div>
        <div class="see">
            <p><a href="/san-pham/hot">Tất cả sản phẩm</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @{
            foreach (var item in HotSP)
            {
                var url = "/chi-tiet/" + item.SanPham.TieuDe + "-" + item.MaSP;

                <div class="grid_1_of_4 images_1_of_4">
                    <a href="@url" class="item-sp" style="text-decoration:none">
                        <img src="@item.SanPham.AnhTDe" alt="@item.SanPham.TenSP" />
                        <h2>@item.SanPham.TenSP</h2>
                        <div class="price-details">
                            <div class="price-number">
                                <span class="rupees">@(item.SanPham.GiaBan > 0 ? item.SanPham.GiaBan.Value.ToString("N0") : "Liên hệ")</span>
                            </div>
                            <div class="add-cart">
                                <span>@item.Khuvuc.TenKV</span>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </a>
                </div>

            }
        }
        <ul class="homeproduct "></ul>

    </div>
</div>

